{
  "include": ["src", "api"],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es2022", "DOM"],
    "module": "ESNext",
    "outDir": "build",
    "types": ["node"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true
  }
}
